<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="270dp"
    android:layout_height="300dp"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#ffffff"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:text="YUMM! GOOD CHOICE"
            android:textSize="19sp"/>

        <View
            android:layout_width="97dp"
            android:layout_height="3dp"
            android:layout_marginTop="17dp"
            android:background="#ad1457"/>

        <ImageView
            android:id="@+id/selected_food_image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/shortcake"
            android:layout_marginTop="27dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/selected_food_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Samosa"
                android:textStyle="italic"
                android:textSize="17sp"/>

            <TextView
                android:id="@+id/selected_food_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tsh. 500"
                android:layout_marginLeft="10dp"
                android:textSize="17sp"
                android:textStyle="italic"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Qtty:"
                android:textSize="17sp"
                android:layout_marginLeft="10dp"/>

            <EditText
                android:id="@+id/selected_food_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="1"/>
        </LinearLayout>

            <Button
                android:id="@+id/add_to_cart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:layout_marginTop="5dp"
                android:text="Add to cart"
                android:textStyle="bold"
                android:textSize="23sp"
                android:textColor="#ad1457"/>



    </LinearLayout>

</RelativeLayout>