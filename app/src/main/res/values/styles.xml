<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CustomActionBar" parent="@style/TextAppearance.AppCompat.Headline">
        <item name="android:fontFamily">@font/seasrn__</item>
        <item name="android:textColor">#AD1457</item>
    </style>

    <!--Text view themes for home screen-->
    <style name="TextAppearance" parent="TextAppearance.Compat.Notification">
        <item name="android:background">#fff</item>
        <item name="android:textColor">#000</item>
        <item name="android:shadowColor">#37474F</item>
    </style>


</resources>
